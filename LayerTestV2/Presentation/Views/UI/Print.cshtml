@model List<DataAccess.Database.Table.Customer>
@{
    ViewData["Title"] = "Print";
}

<h1>Print</h1>

<div>
	<form method="post">
		<input type="text" placeholder="Username" name="Username" />
		<button type="submit">Get customer</button>
	</form>

	<h2>Customers</h2>

	<table>
		<thead>
			<tr>
				<td>Customer ID</td>
				<td>Username</td>
				<td>Password</td>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var c in Model)
				{
					<tr>
						<td>@c.CustomerID</td>
						<td>@c.Username</td>
						<td>@c.Password</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>